.phone-widget(*ngIf='!numberExists() && !edit')
  span.no-phone No phone number!
.phone-widget(*ngIf='numberExists() && !edit')
  span.country-code +{{number.countryCode}}
  span.number {{number.nationalNumber}}
.phone-widget.edit(*ngIf='number && edit')
  mat-input-container.country-code
    input(mdInput, [(ngModel)]='number.countryCode', width='3')
    span(mat-prefix) +
  mat-input-container.national-number
    input(mdInput, [(ngModel)]='number.nationalNumber')
