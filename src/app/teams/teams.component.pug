.teams.master-detail
  .master
    mat-nav-list
      a(mat-list-item, *ngFor='let team of teams | orderBy: "+id"', routerLink="{{getTeamLink(team)}}" routerLinkActive='selected')
        div(mat-list-avatar)
          h1.team-number([ngStyle]='{"background-color": team.color}') {{team.id}}
        h3(mat-line) {{team.name}}
        p(mat-line) {{team.getPrettyRacersList()}}
    |  
    button(mat-fab, (click)='createTeam()')
      mat-icon.mat-24 add
  .detail
    router-outlet
