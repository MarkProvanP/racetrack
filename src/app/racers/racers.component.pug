.racers.master-detail
  .master
    mat-nav-list
      a(mat-list-item, *ngFor='let racer of racers | orderBy: "+name" ',
      routerLink="{{getRacerLink(racer)}}",
      routerLinkActive='selected')
        h3(mat-line) {{racer.name}}
    |  
    button(mat-fab, (click)='createRacer()')
      mat-icon.mat-24 add
  .detail
    router-outlet
