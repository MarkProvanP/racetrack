.texts-by-team.master-detail
  .teams-list.master
    md-nav-list
      a(md-list-item, *ngFor='let team of teams', [routerLink]='getTeamLink(team)', routerLinkActive='selected')
        div(md-list-avatar)
          h1.team-number([ngStyle]='{"background-color": team.color}') {{team.id}}
        h3(md-line, [ngClass]='{unread: numberUnreadMessagesForTeam(team)}') ({{numberUnreadMessagesForTeam(team)}}) {{team.name}}
        p(md-line) {{team.getPrettyRacersList()}}
  texts-list([texts]='selectedTeamTexts', [display]='displayOptions')

