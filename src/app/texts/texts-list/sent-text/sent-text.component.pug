md-card.text-card.text-outbound([ngClass]='{"unknown-text": !textRacer}')
  md-card-header
    md-card-title
      i(*ngIf='!textRacer') Text from unknown number!
        phone-widget([number]='text.from')
      .inline-text-title(*ngIf='textRacer && display.oneline')
        phone-widget([number]='text.to')
        |  - 
        span(*ngIf='textRacer') {{textRacer.name}}
        |  - 
        span(*ngIf='textTeam') {{textTeam.name}}
        |  
        span.error(*ngIf='!textTeam') ERROR: No Team for Racer!
      time-widget([time]='text.timestamp')
      .text-title(*ngIf='!display.oneline')
        div(*ngIf='display.number')
          phone-widget([number]='text.from')
        div(*ngIf='display.time') {{text.getPrettyTimestamp()}}
  md-card-content  {{text.body}}
  .text-sent(*ngIf='text.sentBy')
    | Sent by
    user-widget([user]='text.sentBy.user')
  md-card-actions

